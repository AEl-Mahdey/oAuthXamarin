<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:oAuthXamarin"
             x:Class="oAuthXamarin.MainPage">

   
    <StackLayout>
        
        <StackLayout x:Name="LoginElements">
            <Label Text="oAuth Tutorial!" 
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        
            <StackLayout>
                <Button x:Name="FacebookLogin" Text="Facebook" Clicked="OnFacebookLoginClicked" />
            </StackLayout>

            <StackLayout>
                <Button x:Name="MicrosoftLogin" Text="Microsoft" Clicked="OnMicrosoftLoginClicked"/>
            </StackLayout>

            <StackLayout>
                <Button  x:Name="TwitterLogin" Text="Twitter"/>
            </StackLayout>

            <StackLayout>
                <Button  x:Name="GoogleLogin" Text="Google" Clicked="OnGoogleLoginClicked"/>
            </StackLayout>
        </StackLayout>

        <StackLayout x:Name="UserElements">
            
            <Label x:Name="FirstName" Text="User Name:" />
            <Label x:Name="userEmail" Text="Email:" />
            <Image x:Name="userPicture"/>
            
        </StackLayout>

    </StackLayout>




</ContentPage>
